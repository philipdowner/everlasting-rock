#Always ignore these general patterns
.DS_Store
sitemap.xml
sitemap.xml.gz
.bak

#Ignore db_backups and logs
db_backup/*.zip
logs/**

#Ignore everything in the root
public_html/*
!public_html/wp-content

# Keep any utility, testing and verification files
!public_html/index.maintenance.php
!public_html/utility-*.php
!public_html/test*.php
!public_html/google*.html
!public_html/pinterest-*.html

# Ignore everything in the wp-content directory
public_html/wp-content/*

# Keep custom-developed plugins
!public_html/wp-content/plugins
public_html/wp-content/plugins/*
!public_html/wp-content/plugins/manifest-*

# Only keep the client theme
!public_html/wp-content/themes
public_html/wp-content/themes/*
!public_html/wp-content/themes/foundation
public_html/wp-content/themes/foundation/.sass-cache
public_html/wp-content/themes/foundation/css
public_html/wp-content/themes/foundation/inc/vendor
public_html/wp-content/themes/foundation/js/dist
public_html/wp-content/themes/foundation/bower_components
public_html/wp-content/themes/foundation/node_modules
public_html/wp-content/themes/foundation/*.map